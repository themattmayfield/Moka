{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "build",
    "rootDir": "src",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "target": "es6",
    "lib": ["esnext", "DOM"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "module": "commonjs",
    "allowJs": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,   
  },
  "include": ["**/*.d.ts", "src/**/*", "seed.ts"]
}
